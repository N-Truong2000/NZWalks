@using NZWalks.UI.Models.Dto
@model RegionDto
@{
}
<h1 class="mt-3">Edit</h1>

@if(Model is not null){
    <form  method="post" class="mt-3">
        <div class="mt-3">
            <label class="col-form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly></input>
        </div>
        <div class="mt-3">
            <label class="col-form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name"></input>
        </div>
        <div class="mt-3">
            <label class="col-form-label">Code</label>
            <input type="text" class="form-control" asp-for="Code"></input>
        </div>
        <div class="mt-3">
            <label class="col-form-label">Image URL</label>
            <input type="text" class="form-control" asp-for="RegionImageUrl"></input>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-primary" asp-action="Delete" asp-controller="Regions" >Delete</button>
        </div>
    </form>
}