@using NZWalks.UI.Models.Dto
@model AddRegionViewModel

@{

}
<h1 class="mt-3">Add Region</h1>

<form  method="post" class="mt-3">
    <div class="mt-3">
        <label class="col-form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"></input>
    </div>
    <div class="mt-3">
        <label class="col-form-label">Code</label>
        <input type="text" class="form-control" asp-for="Code"></input>
    </div>
    <div class="mt-3">
        <label class="col-form-label">Image URL</label>
        <input type="text" class="form-control" asp-for="ImageUrl"></input>
    </div> 
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>
@Html.ValidationSummary()